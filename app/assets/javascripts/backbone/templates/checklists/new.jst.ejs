

<h1>New checklist</h1>

<form id="new-checklist" name="checklist" method="post" enctype="multipart/form-data" action="/checklists" accept-charset="UTF-8">
  <div class="field">
    <label for="title"> title:</label>
    <input type="text" name="title" id="title" value="<%= title %>" >
  </div>

  <div class="field">
    <label for="comments"> comments:</label>
    <input type="text" name="comments" id="comments" value="<%= comments %>" >
  </div>
  
<div class="field">
     <input type="file" id="photo" name="photo">
  </div>
  <div class="actions">
    <input type="submit" value="Create Checklist" />
  </div>

</form>

